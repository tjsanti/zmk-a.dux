#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#define DEFAULT 0
#define SYM 1
#define NUM 2
#define SETUP 3
#define ALT 4

&mt {
    flavor = "tap-preferred";
    tapping_term_ms = <230>;
};

/ { 

	#include "my_macros.dtsi"
	#include "my_combos.dtsi"

    keymap {
        compatible = "zmk,keymap";
                
       	default_layer {
			bindings = <
				&trans &kp W &kp M &kp G &trans 						       &trans &kp DOT  &kp K    &kp J   &trans
				&mt LGUI R &mt LALT S &mt LCTRL N &mt LSHFT T &kp P 			   &kp CMMA &mt RSHFT A &mt RCTRL E &mt RALT I &mt RGUI H
				&kp L &kp C &kp V &kp D &kp B				               &kp X &kp O  &kp U &kp Y &kp F
								&kp RET &kp SPACE  				&to SYM &kp RSHIFT  
			>;
		};

		sym_layer {
			bindings = <
				&kp TILDE   &kp EXCL    &kp MINUS   &kp PLUS    &kp DOWN		       &kp UP &kp STAR &kp FSLH &kp EQUAL &kp NUM_0 
				&mt LGUI AMPS &mt LALT LBRC &mt LCTRL LBKT &mt LSHFT LPAR &kp LT 			   &kp GT &mt RSHFT RPAR &mt RCTRL RBKT &mt RALT RBRC &mt RGUI PIPE
				&kp BSLH    &trans 	&trans &trans  &kp LEFT 	                       &kp RIGHT &kp APOS &trans &kp QMARK &kp DEL 
												&trans &to DEFAULT                    &to NUM &trans 
			>;
		};
		
		num_layer {
			bindings = <
				&trans  &trans &trans  &trans  &trans    			&trans  &trans &trans &trans &to SETUP 
				&mt LGUI N1  &mt LALT N2 &mt LCTRL N3 &mt LSHFT N4 &kp N5 		&kp N6 &mt RSHFT N7 &mt RCTRL N8 &mt RALT N9 &mt RGUI N0
				&trans  &trans &trans &trans   &trans    			&trans &trans &trans &trans  &trans
											&trans &to DEFAULT   				&to SYM &kp RSHIFT   
			>;
		};	
		
		setup_layer {
			bindings = <
				&kp NUM_1  &kp NUM_2    &kp NUM_3    &kp NUM_4    &kp NUM_5 			&trans &trans   &trans   &trans  &trans
				&kp F1 &kp F2 &kp F3 &kp F4 &kp F5  						&trans &kp PG_UP  &kp K_VOL_UP &kp K_MUTE &trans 
				&bt BT_CLR  &bt BT_NXT &bt BT_PRV &kp F6 &kp F7   				&trans &kp PG_DN  &kp K_VOL_DN  &trans &trans   
											&trans &to DEFAULT  					&trans &trans 
			>;
		};	
        
       	alt_alpha_layer {
			bindings = <
				&kp Q &kp W &kp F &kp P &kp B 						       &kp J &kp L  &kp U    &kp Y   &kp SEMI
				&mt LGUI A &mt LALT R &mt LCTRL S &mt LSHFT T &kp G 			   &kp M &mt RSHFT N &mt RCTRL E &mt RALT I &mt RGUI O
				&kp Z &kp X &kp C &kp D &kp V				               &kp K &kp H  &kp CMMA &kp DOT &kp MINUS
								&kp RET &kp SPACE  				&to SYM &kp RSHIFT  
			>;
		};

	};
};
